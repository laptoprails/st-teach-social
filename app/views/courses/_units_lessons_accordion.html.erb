<div class="accordion">
  <% @course.units.each do |unit| %>
      <div class="accordion-group">
        <div class="accordion-heading">
          <a class="accordion-toggle" data-toggle="collapse" href="#collapse_<%= unit.id  %>"><%= unit.unit_title.titleize %> (<%= pluralize((unit.lessons.count),
                                                                                                                                       'lesson') %>) </a>
          <a class="see-course-unit" href="<%= course_unit_path(@course, unit) %>"><i class="icon-search"></i></a>
        </div>
        <div id="collapse_<%= unit.id %>" class="accordion-body collapse">
          <% unit.lessons.each do |lesson| %>
              <div class="accordion-inner">
                <%= lesson.lesson_title %>
              </div>
          <% end %>
        </div>
      </div>
  <% end %>
</div>