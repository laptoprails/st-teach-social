<div class="signup-block">
  <h3>Are You an Awesome Teacher?</h3>
  <p>Create and share your best lesson plans with other teachers.</p>
  <a class="btn btn-monkey" href="#signUpModal" data-toggle="modal">Sign Up!</a>
</div>

<div id="signUpModal" class="modal hide fade">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h2>Create a Free Account!</h2>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |form| %>
    <div class="modal-body">
      <p>Create a free account and be on your way to sharing lessons and finding the best content out there!</p>
        <%= render 'shared/form_error_messages', object: form.object %>

      <div class="row-fluid">
        <div class="span6">
          <%= form.label :first_name, "First Name" %>
          <%= form.text_field :first_name %>
        </div>
        <div class="span6 no-left-margin">
          <%= form.label :last_name, "Last Name" %>
          <%= form.text_field :last_name %>
        </div>
      </div>

      <div class="row-fluid">
        <div class="span12">
          <%= form.label :institution, "School" %>
          <%= form.text_field :institution, class:"span11" %>
        </div>
      </div>

      <div class="row-fluid">
        <div class="span12">
          <%= form.label :email, "Email Address (for logging in)" %>
          <%= form.text_field :email, class:"span11" %>
        </div>
      </div>

      <div class="row-fluid">
        <div class="span6">
          <%= form.label :password, "Password" %>
          <%= form.password_field :password %>
        </div>
        <div class="span6 no-left-margin">
          <%= form.label :password_confirmation, "Confirm" %>
          <%= form.password_field :password_confirmation %>
        </div>
      </div>

      <%= form.hidden_field :role, value: "teacher" %>

    </div>
    <div class="modal-footer">
      <%= form.submit "Sign Up!", class: "btn btn-monkey" %>
    </div>
    <% end %>
</div>