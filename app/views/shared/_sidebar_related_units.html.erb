<div class="sidebar">
  <header class="course-header">
    <h4>Similar Units</h4>
  </header>
  <section>
    <!-- some based on title -->
    <div id="similarObjectiveablesTitle">
      <% if @similar_units_based_on_name %>
        <% @similar_units_based_on_name.each do |entry| %>
          <%= link_to entry[:objectiveable].to_s.titleize, course_unit_path(entry[:objectiveable].course, entry[:objectiveable]) %><br />
        <% end %>
      <% end %>
    </div>
    <!--<h4>Based on common objectives</h4>-->
    <div id="similarObjectiveables">
      <% if @similar_units_based_on_objectives %>        
        <% @similar_units_based_on_objectives.each do |entry| %>
        <%= link_to entry[:objectiveable].to_s.titleize, course_unit_path(entry[:objectiveable].course, entry[:objectiveable]) %><br />
        <% end %>        
      <% end %>
    </div>
  </section>
</div>