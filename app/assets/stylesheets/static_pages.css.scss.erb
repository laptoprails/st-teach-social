/* Navbar */
.navbar-absolute-top{
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    margin: 0 auto;
    z-index: 10;
    padding: 0.416667% 0 0 0;
    width: 97%;
    display: block;
}

.navbar-chalkboard{
    background: transparent;
    margin-top:15px;
    -moz-box-shadow: none;
    box-shadow: none;

    .logo {
        color: #FFFFFF;
        float: left;
        width: 43%;

        p{
            float:left;
            font-size: 1em; /*13px /13 */
            clear:left;
        }

    }

    .navdiv {
        float: right;
    }

    .navmenu-chalkboard{
        margin-top: 20px;

    }

    .navmenu-extended {
        background-color: rgba(234, 231, 216, 1);
        -moz-border-radius: 3px;
        -webkit-border-radius: 3px;
        border-radius: 3px;

        .nav li a {
            color: #606E67;
            text-shadow: none;
        }

        .nav li a:hover {
            background: #606E67;
            color: rgba(234, 231, 216, 1);
        }
    }
}



section.chalkboard{
    background: url(<%= asset_path("bg-chalkboard.png") %>) top center repeat-x;
    width:100%;
    height:100%;
    position:absolute;
    right:0;
    top:0;

    header.hero-header{
        display: block;
        position: relative;
        top: 13em; /*200/13*/
        text-align: center;
        color: #FFFFFF;

        h1{
            text-shadow: 1px 1px 0px #606E67;
            font-family: 'Open Sans', sans-serif, 'Helvetica', 'Arial', sans-serif;
            font-weight: 700;
            font-size: 3em; /* 39px / 13px */
            line-height: 1.619em;
        }

        h2{
            font-family: 'Open Sans', sans-serif, 'Helvetica', 'Arial', sans-serif;
            font-weight: 300;
            margin-bottom: 20px;
            padding: 0px 5px 0px 5px;
            line-height: 1.619em;
        }
    }

    div.chalkboard-form{
        display: block;
        position: relative;
        float: left;
        top: 12em;
        color: #ffffff;

        form{
            label{
                display: block;
                float: left;
                width: 100%;
            }
            input[type="text"]{
                display: block;
                float: left;
                height: 2.5em;
                margin-top: 2%;
            }

            input[type="submit"]{
                display: block;
                float: left;
                clear: left;
            }

            ::-webkit-input-placeholder{
              font-size: 1.23076923em;
            }
            ::-moz-placeholder{
                font-size: 1.23076923em;
            } /* firefox 19+ */
            input:-moz-placeholder{
                font-size: 1.23076923em;
            }
        }

    }

    .primary-cta-btn, .static-sign-up-btn{
        display: inline-block;
        background-color: rgba(255, 200, 120, 1);
        background-image: -webkit-linear-gradient(top, #FFC878, #CCA060);
        background-image: -moz-linear-gradient(top, #FFC878, #CCA060);
        background-image: -ms-linear-gradient(top, #FFC878, #CCA060);
        background-image: -o-linear-gradient(top, #FFC878, #CCA060);
        background-image: linear-gradient(top, #FFC878,#CCA060);
        width: 10.7692308em; /*140/13*/
        text-align: center;
        padding: 0.8em;
        -moz-border-radius: 5px;
        -webkit-border-radius: 5px;
        border-radius: 5px;
        border: 1px solid #915c38;
        -webkit-transition: opacity 0.2s ease-in-out,bottom 0.2s ease-in-out;
        -moz-transition: opacity 0.2s ease-in-out,bottom 0.2s ease-in-out;
        -o-transition: opacity 0.2s ease-in-out,bottom 0.2s ease-in-out;
        transition: opacity 0.2s ease-in-out,bottom 0.2s ease-in-out;
        color: rgba(255, 255, 255, 1);
        font-size: 2em; /*26px / 13px */
        text-transform: uppercase;
        text-shadow: 1px 1px 0 rgba(96, 110, 103, 1);
        font-family: 'Open Sans Condensed', sans-serif, 'Helvetica', 'Arial', sans-serif;
        text-decoration: none;
    }

    .primary-cta-btn:hover, .static-sign-up-btn:hover{
        background: #CCA060;
    }

    .static-sign-up-btn{
        width: 100%;
        padding: 0.4em;
        font-family: Helvetica, Arial, sans-serif;
        text-transform: none;
        font-size: 1.23076923em;
        padding: 0.69230769em;
    }

}

