//Padding and Such
$page-width: 1920px;
$body-width: 100%;
$box-margin: 0.7692em !important;

/********************************
Body CSS
********************************/
body.padded {
    padding-top: 60px;
}

body.patterned {
    background: url("<%= asset_path('bg-patterned.jpg') %>");
}

.hero {
    clear:both;
    margin-bottom:55px;
    float: left;
}

section.chalkboard{
    display: block;
    float: left;
    clear: both;

    header.hero-header{
      display: block;
      width: 85%;
      margin: 0 auto;
    }
}

.red{
    color: rgb(164, 50, 32) !important;
}

.grey-background{
    background: rgba(152, 161, 186, 0.1);
}

#feedback{
    height: 8em;
    width: 8em;
    text-align: center;
    position: fixed;
    top: 50%;
    z-index: 999;
    transform: rotate(-90deg);
    -webkit-transform: rotate(-90deg);
    -moz-transform: rotate(-90deg);
    -o-transform: rotate(-90deg);
    filter: progid:DXImageTransform.Microsoft.BasicImage(rotation=3);

    a{
        display: block;
        background: rgba(0, 0, 0, 0.5);
        font-size: 1.2308em;
        height: 1.7em;
        width: 9em;
        padding: 0.5em 0.5em;
        color: #ffffff;
        border-color: rgb(164, 50, 32) rgb(164, 50, 32) #B13623;
        border-color: rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) fadein(rgba(0, 0, 0, 0.1), 15%);
        -moz-border-radius: 4px;
        -webkit-border-radius: 4px;
        border-radius: 4px;
        *background-color: rgb(164, 50, 32);
        filter: progid:DXImageTransform.Microsoft.gradient(enabled = false);
    }
}

i{
    font-size: 0.8em;
    color: $fancy-gray;
}

.white{
    color: #ffffff !important;
}

i:hover{
    text-decoration: none;
}

.best_in_place:hover {
    background: #ffffe0;
}

i.icon-trash{
    font-size: 1.1em;
}

/********************************
Sidebar
********************************/
div.sidebar{

    a{
