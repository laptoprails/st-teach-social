/********************************
Variables
********************************/
//Fonts
$header-gradient-dark-color: #2B2F3A;
$header-gradient-light-color: #50596D;
$open-sans: 'Open Sans', 'Helvetica Neue Light', sans-serif;
$permanent-marker: 'Permanent Marker', cursive;
$fancy-gray: rgba(80, 89, 109, 0.9);
$soft-gray: rgba(80, 89, 109, 0.5);
