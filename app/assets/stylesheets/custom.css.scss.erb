/*******************************************
Media Queries
*******************************************/

/* Large Desktop */
@media screen and (min-width: 1200px) {

    section.chalkboard {
        header.hero-header {
            h2 {
                line-height: 2.1;
                margin-bottom: 25px !important;
            }
        }
    }

    section.leader-content, .section-content {
        display: block;

        .feature-paragraph {
            p.intro-paragraph {
                margin-top: 1em !important;
                font-size: 2.3em !important;
            }
        }
    }

    .primary-cta-btn {
        padding: 1em;
    }

}

/*Portrait tablet to landscape and desktop */
@media screen and (min-width: 769px) and (max-width: 979px) {

    .navbar-chalkboard{

        .logo {
            width: 30%;
        }

        .navdiv {
            z-index: 10;
        }

        .navdiv .nav > li > a {
            letter-spacing: 2px;
        }
    }

}

/*Landscape phone to portrait tablet */
@media screen and (max-width: 768px) {

    section.chalkboard {
        header.hero-header {

            h1 {
                font-size: 2.5em !important;

            }
            h2 {
                font-size: 1.3em !important;
                line-height: 1.2;
                margin-bottom: 10px;
                margin-top: 5px;
            }

            .primary-cta-btn {
                padding: 0.5em;
            }
        }
    }

    .screenshot, .screenshot-right {
        width: 100% !important;
        float: none !important;

        img.feature-image {
            width: 100% !important;
            margin-left: 0px !important;
        }

    }

    .feature-paragraph, .feature-paragraph-left {
        width: 100% !important;
        float: none !important;
        margin-top: 10px;

    }

}

/* Landscape phone */
@media screen and (max-width: 480px) {

    .hero {
        margin-bottom:0px !important;
    }

    .navbar .brand {
        font-size: 2.5em !important;
    }

    .navbar-chalkboard{
        margin-top:20px !important;

        .logo {
            width: 80%;

            p{
                float:left;
                font-size: 1em; /*13px /13 */
                clear:left;
            }

        }

        .navdiv {
            float: right;
        }

    }

    section.chalkboard {
        background: #616e68 !important;
        border-top: 10px solid #ffc878 !important;
        border-bottom: 10px solid #ffc878 !important;
        min-height: 300px;

        header.hero-header {

            position: relative;
            top: 9.75em !important;

            h1 {
                font-size: 2em !important;
                line-height: 1.2;

            }

            h2 {
                font-size: 1em;
                line-height: 1;
                margin-bottom: 5px;
                margin-top: 5px;
            }
        }

    }

    .leader-div {
        margin-top: 295px !important;
    }

    section.leader-content, .section-content {
        header.intro-content {
            h1 {
                font-size: 3em !important;
            }
        }
    }


}

/* Portrait phone */
@media screen and (max-width: 320px) {

    section.chalkboard {
        min-height: 460px;

        header.hero-header {
            h1 {
                margin: 20px 0px 20px 0px !important;

            }
            h2 {
                margin: 20px 0px 20px 0px !important;
            }
        }
    }

    .leader-div {
        margin-top: 435px !important;
    }


}

/* Print media */
@media print {

    body{
        background: none !important;
        background-color: #ffffff;
    }

    .navbar-inner{
        background: #ffffff;
        border: none;
    }

    .hidden-print{
        display: none !important;
        visibility: hidden;
    }

    .show-print{
        visibility: visible !important;
        display: block;
    }

    .page-break{
        page-break-before: always;
    }

    header.course-header{
        border-bottom: 1px solid rgba(152, 161, 186, 1) !important;
        /*border: 1px solid rgba(152, 161, 186, 0.5);*/

    }

}

.field {
    display:inline;
}

/* Vote arrows */
.vote, .vote-display {
    width: 50%;
    text-align: center;
    margin: 1em auto;

    .arrow {    
        margin: 0 auto;
        text-decoration: none;
        width:40px;
        height:25px;
        background: url("<%= asset_path('sprite-arrows.png') %>")
    }

    .upvote, .upvote-active:hover {
        background-position: 0px 0px;
    }

    .upvote-active, .upvote:hover {
        background-position: 40px 0px;
    }

    .downvote, .downvote-active:hover {
        background-position: 0 -42px;
    }

    .downvote-active, .downvote:hover {
        background-position: 40px -42px;
    }    

    .vote-count {
    text-align: center;
    font-size: 2.5em;
    margin-top: 1em;
    margin-bottom: 10px;
    color: $header-gradient-light-color;
    }  
}

.clear {
    clear: both;
}

